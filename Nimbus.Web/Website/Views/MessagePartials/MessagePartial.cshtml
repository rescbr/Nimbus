
@model Nimbus.Model.Bags.MessageBag
@{ string mediumAvatarUrl = Model.AvatarUrl.Replace("/av130x130/", "/av60x60/"); }

<script type="text/javascript">
    tipoMessAtual = 'normal';
</script>

<div class="messages">
    @{
        string readStat;

        if (Model.UserReadStatus == true)
        {
            readStat = "background: #d1d3d4";
        }
        else
        {
            readStat = "background: #bcbec0";
        }

        <div class="post_m" id="divMesg_@Model.Id" style="@readStat">
            <a href="/userprofile/index/@Model.SenderId">
                <div class="postHeImg_m">
                    <img src="@mediumAvatarUrl" width="60" height="60">
                </div>
            </a>

            <div class="post_Right_m">
                <nav class="postHeaderLeft_m">
                    <ul class="sbs">
                        <li><a href="userprofile/index/@Model.SenderId">@Model.UserName</a></li>
                        <li onclick="ajaxSeeMsg(@Model.Id,'divMesg_');" class="cpointer">@Model.Title</li>
                    </ul>
                </nav>
                <nav class="postHeaderRight_m">
                    <ul class="sbs">
                        <li>@string.Format("{0:d/M/yyyy}", Model.Date)</li>
                        <li>@string.Format("{0:HH:mm}", Model.Date)</li>
                        <li><img src="/images/utils/delete.png" class="cpointer" id="deleteMsg_@Model.Id" onclick="ajaxDeleteMsg(this.id);" /></li>
                    </ul>
                </nav>
                <p onclick="ajaxSeeMsg(tipoMessAtual);" class="postContent_m">
                    @Model.Text
                </p>
            </div>
          
            @*<div onclick="ajaxSeeMsg(@Model.Id,'divMesg_');">
                    <div class="postContent_m">
                        <p>@Model.Text</p>
                    </div>
                </div>*@
       </div>

    }

</div>