@model Nimbus.Web.Website.Models.TopicModel

<div id="divCurrentText">

    <p>
         @(new HtmlString(Model.CurrentTopic.Text))
    </p>

</div>

<div id="divNewText" style="display:none;">
    <textarea id="txtaArticle" required class="ckeditor">@Model.CurrentTopic.Text</textarea>

    <div>
        <button value="Salvar" onclick="ajaxEditTopic(@Model.CurrentTopic.Id, '@Model.CurrentTopic.TopicType', 'divCurrentText','divNewText')"></button>
    </div>
</div>