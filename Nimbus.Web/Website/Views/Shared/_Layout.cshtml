<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" type="text/css" href="../../../Styles/Style.css" />

    <title>@ViewBag.Title - Nimbus</title>

</head>
<body>
    @* não esquecer de minificar =) *@
    @Scripts.Render(("~/Scripts/modal.js"))
    @Styles.Render(("~/Styles/modal.css"))
    @Scripts.Render(("~/Scripts/ScriptsShared.js"))
    @Scripts.Render(("~/Scripts/ckeditor/ckeditor.js"))
    @Scripts.Render(("~/Scripts/jquery-2.0.3.js"))


    <header id="header">
			<div class="container">
				<nav class="logo">
					<ul class="sbs">
						<li><div class="userlogo"></div></li>
						<!-- <img src="userlogo.png"> -->
						<li><h1>Logo</h1></li>
					</ul>
				</nav>

				<nav class="center">
					<ul class="sbs">
                        <a href="#"><li class="BSearch">Search</li></a>
                        <a href="../TrendingTopics"><li class="BTrTop">Trending</li></a>
                        <a href="#"><li class="BTop">Top</li></a>
                        <a href="#"><li class="BNews">News</li></a>
					</ul>
				</nav>

				<nav class="right">
					<ul class="sbs">
					<!-- <img src="userpic.png"> -->
						<li><div class="userpic"></div></li>
						<li><h2 class="userName">User's Name</h2></li>@*
						<li><div class="press exitbutton">x</div></li>*@
					</ul>
				</nav>
			</div>
		</header>

		<div class ="wrapper">
            <div class="container-body">
                <div class="middle-body">
			        @RenderBody()
                </div>
            </div>
		</div>
   
		<footer id="footer">
			<!-- blablablabla-->
		</footer>
    @if (User.Identity.IsAuthenticated) {
        @Scripts.Render("~/Scripts/jquery.signalR-2.0.0.js")
        @Scripts.Render("~/signalr/hubs")
        @Scripts.Render("~/Scripts/Notifications.js")
    }
    
</body>
</html>
