        </div>

        <div class="divformNewAccount">
            <p>
                <label for="City">Cidade</label>
            </p>
            <input name="City" type="text" placeholder="Cidade" style="max-width: 384px; min-width: 384px; padding: 4px;" required />
        </div>*@

        <div class="divformNewAccount">
            <input name="Email" type="email" placeholder="E-mail (exemplo@nimbus.com)" style="max-width: 384px; min-width: 384px; padding: 4px;" required />
        </div>

        <div class="divformNewAccount">
            <input name="Password" type="password" onkeyup="validPassword(this.value);" placeholder="Senha" min="6" maxlength="30" style="max-width: 384px; min-width: 384px; padding: 4px;" required />
            <p id="pPowerPass"></p>
        </div>

        <div class="divformNewAccount">
            
            <input name="ConfirmPassword" type="password" placeholder="Confirmar a Senha" min="6" maxlength="30" style="max-width: 384px; min-width: 384px; padding: 4px;" required />
        </div>

        <div>
            <p><input type="checkbox" required />
                <a href="/nimbus/termosdeuso" target="_blank" style="color:#87c240;"><u>Aceito os termos de uso</u></a></p>
        </div>

        <div class="divBtnNewAccount">
            <input type="submit" value="Criar Conta" id="salvar" class="divSaveNewAccount" />
        </div>
    </form>
