        <div class="divformNewAccount">
            <p><h1>Cadastre-se já</h1></p><br />
            <input name="FirstName" type="text" placeholder="Nome" style="max-width: 180px; min-width: 172px; float:left; padding: 4px;" required />
            <input name="LastName" type="text" placeholder="Último nome" style="max-width: 180px; min-width: 172px; margin-left: 24px; padding: 4px;" required />
        </div>
        @*
            <div class="divformNewAccount">
                <p>
                    <label for="LastName">Sobrenome</label>
                </p>
                <input name="LastName" type="text" />
            </div>
        *@
        <div class="divformNewAccount">
            <input name="BirthDate" pattern="^(0[1-9]|[12][0-9]|[3][0-1])[/](0[1-9]|[1][0-2])[/](19[3-9][0-9]|20[0-1][1-4])$" type="date" placeholder="Data nascimento (dd/mm/aaaa)" style="max-width: 384px; min-width: 384px; padding: 4px;" required />
        </div>

        @*<div class="divformNewAccount">
            <p>
                <label for="Country">País</label>
            </p>
            <input name="Country" type="text" placeholder="País" style="max-width: 384px; min-width: 384px; padding: 4px;" required />
        </div>*@

        @*<div class="divformNewAccount">
            <p>
                <label for="State">Estado</label>
            </p>
