@model Nimbus.Web.Website.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Website/Views/Shared/_Layout.cshtml";
}

<div id="divPageLogin">
    <div id="divLoginLeft">
        <div>

        </div>

    </div>

    <div id="divLogin">
        <h2>Login</h2>

        <form id="loginForm" method="post" action="/login"
              enctype="application/x-www-form-urlencoded">


            @if (Model.ErrorMessage != null)
    {
                <div><h3>@Model.ErrorMessage</h3></div>
    }

            <label for="Email">E-mail</label>
            <input name="Email" type="email" value="@Model.Email" required /> <br />

            <label for="Password">Password</label>
            <input name="Password" type="password" required /><br />

            <input name="RedirectURL" type="hidden" value="@Model.RedirectURL" />


            <input type="submit" value="Submit" />

        </form>

    </div>

</div>